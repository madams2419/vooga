<?xml version="1.0" encoding="UTF-8"?>
<game>
	<title>Simple Game</title>

	<frame_rate>30</frame_rate>
	
	<scene_width>1500</scene_width>
	<scene_height>1000</scene_height>

	<level>
		<first_level>0</first_level>

		<level_0>
			<level_objectives>
				<objective_0>
					<description>Reach the flag</description>

					<prereqs>1</prereqs>

					<onComplete>
						<behaviors>
							<behavior_0>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>setState</name>
								<parameters>win</parameters>
							</behavior_0>

							<behavior_1>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>jump</name>
								<parameters>1000</parameters>
							</behavior_1>
						</behaviors>
					</onComplete>
				</objective_0>

				<objective_1>
					<description>Get the key</description>

					<onComplete>
						<behaviors>
							<behavior_0>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>setState</name>
								<parameters>key</parameters>
							</behavior_0>
						</behaviors>
					</onComplete>

					<onFailed>
						<behaviors>
							<behavior_0>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>setState</name>
								<parameters>dead</parameters>
							</behavior_0>
						</behaviors>
					</onFailed>
				</objective_1>

				<objective_2>
					<description>Don't collide with bowser</description>

					<onComplete>
						<behaviors>
							<behavior_0>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>jump</name>
								<parameters>1000</parameters>
							</behavior_0>

							<behavior_1>
								<targetType>sprite</targetType>
								<targetIndex>0</targetIndex>
								<name>setState</name>
								<parameters>dead</parameters>
							</behavior_1>
						</behaviors>
					</onComplete>
				</objective_2>
			</level_objectives>

			<sprites>
				<sprite_0>
					<initial_state>standing</initial_state>

					<animations>
						<state_0>
							<name>standing</name>

							<images>
								<image_0>
									<source>resources/images/mario.png</source>

									<delay>1.0</delay>

									<width>100</width>
									<height>200</height>

									<hitboxes>
										<hitbox_0>
											<point_0>0 0</point_0>
											<point_1>100 0</point_1>
											<point_2>100 200</point_2>
											<point_3>0 200</point_3>
										</hitbox_0>
									</hitboxes>
								</image_0>
							</images>
						</state_0>

						<state_1>
							<name>dead</name>

							<images>
								<image_0>
									<source>resources/images/surprisedMario.png</source>

									<delay>1.0</delay>

									<width>100</width>
									<height>200</height>

									<hitboxes>
										<hitbox_0>
											<point_0>0 0</point_0>
											<point_1>100 0</point_1>
											<point_2>100 200</point_2>
											<point_3>0 200</point_3>
										</hitbox_0>
									</hitboxes>
								</image_0>
							</images>
						</state_1>

						<state_2>
							<name>win</name>

							<images>
								<image_0>
									<source>resources/images/happymario.png</source>

									<delay>1.0</delay>

									<width>100</width>
									<height>200</height>

									<hitboxes>
										<hitbox_0>
											<point_0>0 0</point_0>
											<point_1>100 0</point_1>
											<point_2>100 200</point_2>
											<point_3>0 200</point_3>
										</hitbox_0>
									</hitboxes>
								</image_0>
							</images>
						</state_2>

						<state_3>
							<name>key</name>

							<images>
								<image_0>
									<source>resources/images/keyMario.png</source>

									<delay>1.0</delay>

									<width>100</width>
									<height>200</height>

									<hitboxes>
										<hitbox_0>
											<point_0>0 0</point_0>
											<point_1>100 0</point_1>
											<point_2>100 200</point_2>
											<point_3>0 200</point_3>
										</hitbox_0>
									</hitboxes>
								</image_0>
							</images>
						</state_3>
					</animations>

					<physics>
						<type>ComplexPhysicsObject</type>
						<material>bouncy_ball</material>
						<position>50 300</position>
					</physics>
				</sprite_0>

				<sprite_1>
					<initial_state>immobile</initial_state>

					<animations>
						<state_0>
							<name>immobile</name>

							<images>
								<image_0>
									<source>resources/images/ground.png</source>

									<delay>1.0</delay>

									<width>8000</width>
									<height>200</height>

									<hitboxes>
										<hitbox_0>
											<point_0>0 0</point_0>
											<point_1>2000 0</point_1>
											<point_2>2000 200</point_2>
											<point_3>0 200</point_3>
										</hitbox_0>
									</hitboxes>
								</image_0>
							</images>
						</state_0>
					</animations>

					<physics>
						<type>ComplexPhysicsObject</type>
						<material>floating</material>
						<position>0 0</position>
					</physics>
				</sprite_1>
			</sprites>

			<physics_engine>
				<type>ComplexPhysicsEngine</type>
				<drag_coefficient>0.5</drag_coefficient>
				<global_accelerations>
					<gravity>0 -9.8</gravity>
				</global_accelerations>
				<global_forces></global_forces>
			</physics_engine>

			<controls>
				<active_scheme>0</active_scheme>
				<control_scheme_0>
					<key_0>
						<key>RIGHT</key>

						<onPressed>
							<behaviors>
								<behavior_0>
									<targetType>sprite</targetType>
									<targetIndex>0</targetIndex>
									<name>moveForward</name>
									<parameters>10 0</parameters>
								</behavior_0>
							</behaviors>
						</onPressed>

						<onReleased>
							<behaviors>
							</behaviors>
						</onReleased>
						
						<whilePressed>
							<behaviors></behaviors>
						</whilePressed>
					</key_0>

					<key_1>
						<key>LEFT</key>

						<onPressed>
							<behaviors>
								<behavior_0>
									<targetType>sprite</targetType>
									<targetIndex>0</targetIndex>
									<name>moveForward</name>
									<parameters>-10 0</parameters>
								</behavior_0>
							</behaviors>
						</onPressed>

						<onReleased>
							<behaviors>
							</behaviors>
						</onReleased>
						
						<whilePressed>
							<behaviors></behaviors>
						</whilePressed>
					</key_1>

					<key_2>
						<key>UP</key>

						<onPressed>
							<behaviors>
								<behavior_0>
									<targetType>sprite</targetType>
									<targetIndex>0</targetIndex>
									<name>jump</name>
									<parameters>15</parameters>
								</behavior_0>
							</behaviors>
						</onPressed>
						
						<onReleased>
							<behaviors></behaviors>
						</onReleased>
						
						<whilePressed>
							<behaviors></behaviors>
						</whilePressed>
					</key_2>
				</control_scheme_0>
			</controls>

			<collisions>
			</collisions>
			<sprite_paths>
			</sprite_paths>
			</level_0>
	</level>
</game>